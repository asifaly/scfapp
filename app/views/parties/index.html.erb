<p id="notice"><%= notice %></p>

<h1>Parties</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Party ID</th>
      <th>Name</th>
      <th>GST Number</th>
      <th>PAN Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.party_id %></td>
        <td><%= party.name %></td>
        <td><%= party.gst_no %></td>
        <td><%= party.pan_no %></td>
        <td><%= link_to "<i class='fa fa-search'></i>".html_safe, party, :class => 'btn btn-primary btn-sm' %></td>
        <td><%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_party_path(party), :class => 'btn btn-success btn-sm' %></td>
        <td><%= link_to "<i class='fa fa-trash'></i>".html_safe, party, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Party', new_party_path, :class => 'btn btn-primary' %>
